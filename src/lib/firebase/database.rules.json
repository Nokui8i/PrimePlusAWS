{
  "rules": {
    "streams": {
      "$streamId": {
        ".read": "auth != null",
        ".write": "auth != null",
        "events": {
          ".read": "auth != null",
          ".write": "auth != null && (!data.exists() || data.child('userId').val() === auth.uid)"
        },
        "chunks": {
          ".read": "auth != null",
          ".write": "auth != null && (!data.exists() || data.child('userId').val() === auth.uid)",
          "$chunkId": {
            ".validate": "newData.hasChildren(['timestamp', 'data', 'duration', 'size'])"
          }
        }
      }
    }
  }
} 